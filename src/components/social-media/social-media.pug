include ./images/facebook-icon.pug
include ./images/medium-icon.pug
include ./images/telegram-icon.pug
include ./images/twitter-icon.pug

mixin social-media(options = {})
  -
    const {
      links = [
        {
          ref: "https://facebook.com",
          imageName: "facebook-icon",
          alt: "Facebook",
        },
        {
          ref: "https://telegram.com",
          imageName: "telegram-icon",
          alt: "Telegram",
        },
        {
          ref: "https://twitter.com",
          imageName: "twitter-icon",
          alt: "Twitter",
        },
        {
          ref: "https://medium.com",
          imageName: "medium-icon",
          alt: "Medium",
        },
      ],
    } = options;

  nav(class=["social-media"])
    - for(let link of links)
      a(class=["social-media__ref"] href=link.ref target="_blank" rel="noopener noreferrer")
        +#{link.imageName}()